{
   "compilerOptions": {
      "lib": [
         "es2018"
      ],
      "types": [
         "jest"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
         "@controllers/*": [
            "./src/controllers/*"
         ],
         "@entities/*": [
            "./src/entities/*"
         ],
         "@routes": [
            "./src/routes/index.ts"
         ],
         "@lib/*": [
            "./src/lib/*"
         ],
         "@src/*": [
            "./src/*"
         ],
         "@middleware/*": [
            "./src/middleware/*"
         ]
      }
   },
   "exclude": [
      "node_modules",
      "build",
      "__tests__",
      "jest.setup.ts"
   ]
}